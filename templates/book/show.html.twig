{# templates/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ book.title }} - Détails{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">{{ book.title }}</h1>
                    <p class="text-muted">Par {{ book.author }}</p>
                    <p><strong>Catégorie :</strong> {{ book.category.name }}</p>
                    <hr>
                    
                    <div class="mb-4">
                        <h4>Description</h4>
                        <p>{{ book.description }}</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Prix :</strong> {{ book.price|format_currency('EUR') }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Stock disponible :</strong> {{ book.stock }}</p>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a href="{{ path('homepage') }}" class="btn btn-outline-secondary">
                            Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
