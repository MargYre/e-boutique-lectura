{% extends 'base.html.twig' %}

{% block title %}Catégories - Ma Librairie{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">Explorez nos catégories</h1>
            <p class="lead text-secondary mb-4">Trouvez le livre parfait parmi notre sélection soigneusement organisée</p>
        </div>
    </div>

    <div class="row g-4">
        {% for category in categories %}
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 border-0">
                    <div class="card-body text-center">
                        <h3 class="h5 mb-3">{{ category.name }}</h3>
                        <p class="text-muted small mb-4">
                            {% if category.books is defined %}
                                {{ category.books|length }} livres disponibles
                            {% else %}
                                Explorez cette catégorie
                            {% endif %}
                        </p>
                        <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-outline-primary w-100">
                            Découvrir
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    Aucune catégorie disponible pour le moment.
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}