{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Ma Librairie{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('category_list') }}">Catégories</a></li>
            <li class="breadcrumb-item active">{{ category.name }}</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">{{ category.name }}</h1>
            <p class="lead text-secondary">Découvrez tous nos livres dans cette catégorie</p>
        </div>
    </div>

    {% if books is empty %}
        <div class="alert alert-info p-4 text-center">
            <p class="mb-3">Aucun livre n'est actuellement disponible dans cette catégorie.</p>
            <a href="{{ path('category_list') }}" class="btn btn-primary">Voir les autres catégories</a>
        </div>
    {% else %}
        <div class="row g-4">
            {% for book in books %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0">
                        {% if book.image is defined and book.image %}
                            <img src="{{ asset(book.image) }}" class="card-img-top" alt="{{ book.title }}">
                        {% else %}
                            <div class="bg-light text-center py-5">
                                <span class="text-muted">Image non disponible</span>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ book.title }}</h5>
                            {% if book.author is defined %}
                                <p class="card-text text-muted">Par {{ book.author }}</p>
                            {% endif %}
                            {% if book.price is defined %}
                                <p class="card-text fw-bold">{{ book.price }} €</p>
                            {% endif %}
                            <a href="#" class="btn btn-outline-primary me-2">Détails</a>
                            <a href="#" class="btn btn-primary">
                                <i class="bi bi-cart-plus"></i> Ajouter au panier
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="mt-5">
        <a href="{{ path('category_list') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour aux catégories
        </a>
    </div>
{% endblock %}