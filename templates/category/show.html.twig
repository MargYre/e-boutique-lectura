{% extends 'base.html.twig' %}

{% block title %}Livres de {{ category.name }}{% endblock %}

{% block body %}
    <h1>Catégorie : {{ category.name }}</h1>

    {% if books is empty %}
        <div class="alert alert-info">
            Aucun livre dans cette catégorie.
        </div>
    {% else %}
        <div class="row">
            {% for book in books %}
                <div class="col-md-4 mb-4">
                    {# Répétez la carte de livre comme dans book/list.html.twig #}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <a href="{{ path('category_list') }}" class="btn btn-secondary">Retour aux catégories</a>
{% endblock %}